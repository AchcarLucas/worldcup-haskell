-- User Table (Create, Read and Update)
User
	name String
	email Text
    password Text
	gps_latitude Double Maybe default=0
	gps_longitude Double Maybe default=0
	telphone_1 String Maybe default="'(00) 0000-0000'"
	telphone_2 String
    UniqueEmail email
    FromJSON name email
    deriving (Show)
	
-- Figure Table (Read)
Figure
    name String
    valuable Int -- How much it valuable (1 - Common | 2 - Unusual | 3 - Rare)
	dt_created UTCTime default=now()
	dt_update UTCTime default=now()
	deriving Show
	
-- Figure User Table (Create, Read, Update and Delete)
FigureUser
	user_id UserId
	figure_id FigureId
	amount Int
	dt_created UTCTime default=now()
	dt_update UTCTime default=now()
	deriving Show
	
-- Forget Password Table (Create, Read and Delete)
ForgetPassword json
	user_id UserId
	token Text
	validate_time UTCTime default=now()
	dt_created UTCTime default=now()
	dt_update UTCTime default=now()
	deriving Show

-- Trade Figure Table (Create, Read, Update and Delete)
TradeFigure
	user_id UserId
	figure_id FigureId
	amount Int
	dt_created UTCTime default=now()
	dt_update UTCTime default=now()
	deriving Show

 -- By default this file is used in Model.hs (which is imported by Foundation.hs)
