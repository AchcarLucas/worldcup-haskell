-- User Table (Create, Read and Update)
User
	name String
	email Text
    password Text
	gps_latitude Rational
	gps_longitude Rational
	telphone_1 Text
	telphone_2 Text
	user_active Bool
	remember_password Bool
	dt_created UTCTime default=now()
	dt_update UTCTime default=now()
    UniqueUser email
    deriving Typeable
	
-- Figure Table (Read)
Figure
	figure_id Int
    name String
    valuable Int -- How much it valuable (1 - Common | 2 - Unusual | 3 - Rare)
	dt_created UTCTime default=now()
	dt_update UTCTime default=now()
	Primary figure_id
	
-- Figure User Table (Create, Read, Update and Delete)
FigureUser
	user_id UserId
	figure_id Int
	amount Int
	dt_created UTCTime default=now()
	dt_update UTCTime default=now()
	Foreign Figure fkfigure figure_id
	
-- Forget Password Table (Create, Read and Delete)
ForgetPassword
	user_id UserId
	token Text
	validate_time UTCTime default=now()
	dt_created UTCTime default=now()
	dt_update UTCTime default=now()

-- Trade Figure Table (Create, Read, Update and Delete)
TradeFigure
	user_id UserId
	from_figure_id Int
	to_figura_id Int
	amount Int
	dt_created UTCTime default=now()
	dt_update UTCTime default=now()
	Foreign Figure fkfigure_from from_figure_id
	Foreign Figure fkfigure_to to_figura_id

 -- By default this file is used in Model.hs (which is imported by Foundation.hs)
